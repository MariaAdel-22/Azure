@model MvcClienteAlumnoPractica.Models.Alumno

@{
    ViewData["Title"] = "Insertar";
}

<h1>Insertar</h1>

<h4>Alumno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="idAlumno" class="control-label"></label>
                <input name="idAlumno" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Curso" class="control-label"></label>
                <input name="Curso" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input name="Nombre" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Apellidos" class="control-label"></label>
                <input name="Apellidos" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Nota" class="control-label"></label>
                <input name="Nota" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Imagen</label>
                <input type="file" name="imagen" class="form-control" />
             </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

